<!DOCTYPE html>
<html lang="{{ store.locale }}" dir="{{ store.locale == 'ar' ? 'rtl' : 'ltr' }}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ page.title }} - {{ store.name }}</title>
  {{ salla.css }}
</head>
<body class="{{ store.locale == 'ar' ? 'rtl' : 'ltr' }}">

  <!-- ❄️ Snow Canvas (only if enabled) -->
  {% if theme.settings.get('enable_snow', false) %}
    <canvas id="snow-canvas" 
            style="position:fixed;top:0;left:0;width:100%;height:100%;pointer-events:none;z-index:9999;"></canvas>
  {% endif %}

  {% component 'header.header' %}
  {% block content %}{% endblock %}
  {% component 'footer.footer' %}

  {{ salla.js }}

  <!-- ❄️ Inline Snow Script -->
  {% if theme.settings.get('enable_snow', false) %}
  <script>
  (function() {
    const canvas = document.getElementById('snow-canvas');
    const ctx = canvas.getContext('2d');
    let w = window.innerWidth, h = window.innerHeight;
    canvas.width = w; canvas.height = h;

    const flakes = [];
    const count = parseInt('{{ theme.settings.get("snow_particle_count", 80) }}') || 80;

    class Flake {
      constructor() {
        this.x = Math.random() * w;
        this.y = Math.random() * -h;
        this.s = Math.random() * 3 + 1;
        this.v = Math.random() * 2 + 0.2;
      }
      update() {
        this.y += this.v;
        if (this.y > h) this.y = -10;
      }
      draw() {
        ctx.beginPath();
        ctx.arc(this.x, this.y, this.s, 0, Math.PI * 2);
        ctx.fillStyle = 'rgba(255,255,255,0.8)';
        ctx.fill();
      }
    }

    for (let i = 0; i < count; i++) flakes.push(new Flake());

    function animate() {
      ctx.clearRect(0,0,w,h);
      flakes.forEach(f => { f.update(); f.draw(); });
      requestAnimationFrame(animate);
    }
    animate();

    window.addEventListener('resize', () => {
      w = canvas.width = window.innerWidth;
      h = canvas.height = window.innerHeight;
    });
  })();
  </script>
  {% endif %}

</body>
</html>
